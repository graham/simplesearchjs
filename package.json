{
  "name": "simplesearchjs",
  "version": "0.1.0",
  "description": "Gmail like string search.",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc --outDir ./lib",
    "bench": "npm run build && node ./bench.js",
    "lint": "tslint '{src,__tests__}/**/*'",
    "test": "jest --coverage --verbose"
  },
  "dependencies": {
    "tslib": "^1.5.0"
  },
  "devDependencies": {
    "@types/jest": "^16.0.1",
    "@types/node": "^7.0.13",
    "babel-core": "^6.18.2",
    "babel-jest": "^17.0.2",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.18.0",
    "benchmark": "^2.1.4",
    "coveralls": "^2.13.0",
    "jest": "^17.0.3",
    "ts-loader": "^1.3.3",
    "tslint": "^4.3.1",
    "tslint-microsoft-contrib": "^4.0.0",
    "typescript": "^2.0.8"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  }
}
