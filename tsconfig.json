{
    "compilerOptions": {
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "./lib",
        "lib": [
            "es5",
            "es2015"
        ],
        "baseUrl": ".",
        "paths": {
            "src/*": ["./src/*"]
        }
    },
    "exclude": [
        "node_modules"
    ]
}
